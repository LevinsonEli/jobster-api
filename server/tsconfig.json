{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "dist",

    "target": "es2016",

    "esModuleInterop": true,

    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "jest"],

    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "tests", ".vscode"]
}
